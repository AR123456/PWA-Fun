{
  // name displayed on splash screen of project 
  "name": "Food Ninja",
  // similar to name but what is displayed under icon on home screen
  "short_name": "FoodNinja",
  // page that opens up when user taps on icon on the home screen
  "start_url": "/index.html",
  // display can be standalone - should look like a mobile app when user taps icon
  // display browser - it will open app in browser 
  "display": "standalone",
  // background color hex screenof app- on splash screen
  "background_color": "#FFE9D2",
  // the small bar on the top of the app
  "theme_color": "#FFE1C4",
  // how app opens 
  "orientation": "portrait-primary",
  // an array of icons opbjects  for different size screens - let device choose size
  "icons": [
    {
      // specify sorce path
      "src": "/img/icons/icon-72x72.png",
      // the type of file it is 
      "type": "image/png",
      // for sizes
      "sizes": "72x72"
    },
